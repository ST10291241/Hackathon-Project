<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.Login"
             Title="Login">

    <VerticalStackLayout Padding="20" Spacing="15">
        <Label x:Name="BadgeLabel" Text="Badge:" Grid.Row="1" ></Label>
        <Entry Grid.Row="1" x:Name="BadgeEntry" Placeholder="Badge Number" Keyboard="Numeric"/>
        
        <Label x:Name="Branch" Text="Branch:" Grid.Row="1" ></Label>
        <Entry x:Name="BranchEntry" Grid.Row="2"  Placeholder="Branch Number" Keyboard="Numeric"/>
        
        <Label x:Name="Name" Text="Your Name:" Grid.Row="1" ></Label>
        <Entry x:Name="NameEntry" Grid.Row="3" Placeholder="Name"/>
        
        <Label x:Name="PasswordLabel" Text="Password:" Grid.Row="1" ></Label>
        <Entry x:Name="PasswordEntry" Grid.Row="1" Placeholder="Password" IsPassword="True"/>

        <Button Text="Login"   Clicked="OnLoginButtonClicked" />
        <Button Text="Register"   Clicked="ToRegisterPageClicked" />
    </VerticalStackLayout>
</ContentPage>