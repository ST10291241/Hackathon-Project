<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.RegisterationPage"
             Title="Register">

    <VerticalStackLayout Padding="20" Spacing="15">
        <Entry x:Name="BadgeEntry" Placeholder="BadgeNumber" Keyboard="Numeric"/>
        <Entry x:Name="BranchEntry" Placeholder="BranchNumber" Keyboard="Numeric"/>
        <Entry x:Name="NameEntry" Placeholder="Name"/>
        <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True"/>
        <Entry x:Name="ConfirmPasswordEntry" Placeholder="Confirm Password" IsPassword="True"/>

        <Button Text="Register" Clicked="Register" />
    </VerticalStackLayout>
</ContentPage>